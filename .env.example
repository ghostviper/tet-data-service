# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_BASE_URL=https://api.binance.com

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=1

# Update Configuration
UPDATE_INTERVAL=180               # Update interval in seconds
CONCURRENT_REQUESTS=12            # Number of concurrent requests
MAX_DATA_AGE=540                 # Maximum data age in seconds
API_REQUESTS_PER_SEC=15          # API requests per second limit
INCREMENTAL_CANDLES=6            # Number of candles for incremental updates
TIMEFRAME=15m                    # Kline timeframe (15m, 30m, 1h, 2h, 4h, 1d)
DATA_DAYS=30                     # Number of days to keep historical data
BATCH_SIZE=15                    # Batch size for symbol processing

# Performance Thresholds
MAX_UPDATE_TIME=30               # Maximum update time in seconds
MAX_FAILURE_RATE=0.1            # Maximum acceptable failure rate
MEMORY_LIMIT_MB=500             # Memory usage limit in MB

# Adaptive Parameters
ADAPTIVE_INTERVAL=true           # Enable adaptive interval adjustment
ERROR_BACKOFF_MULTIPLIER=1.5    # Multiplier for error backoff
SUCCESS_RECOVERY_RATE=0.9       # Recovery rate for successful operations
MARKET_HOURS_OPTIMIZATION=true  # Enable market hours optimization
OFF_PEAK_MULTIPLIER=2.0         # Multiplier for off-peak hours

# Trading Symbols (comma-separated, leave empty for default list)
# SYMBOLS=BTC/USDT,ETH/USDT,BNB/USDT,XRP/USDT,ADA/USDT

# Logging
LOG_LEVEL=info                   # Log level (debug, info, warn, error)